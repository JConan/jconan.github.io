{
	"name": "jconan.github.io",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "dotenv-run --verbose -- vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"generate-cv-pdf": "tsx scripts/generate-cv-pdf.ts",
		"generate-cv-pdf-dev": "tsx scripts/generate-cv-pdf-dev.ts",
		"generate-cv-pdf-new": "tsx scripts/generate-cv-pdf-new.ts",
		"test": "npm run test:unit && npm run test:integration && npm run test:e2e",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "vitest --config vitest.integration.config.ts",
		"test:unit": "vitest",
		"test:unit:ui": "vitest --ui",
		"test:unit:coverage": "vitest --coverage",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:headed": "playwright test --headed",
		"test:e2e:debug": "playwright test --debug",
		"test:e2e:chromium": "playwright test --project=chromium",
		"test:e2e:firefox": "playwright test --project=firefox",
		"test:e2e:webkit": "playwright test --project=webkit",
		"test:e2e:mobile": "playwright test --project=\"Mobile Chrome\" --project=\"Mobile Safari\"",
		"test:e2e:contact": "playwright test contact-form.e2e.test.ts",
		"test:e2e:runner": "./tests/e2e/run-tests.sh",
		"test:performance": "k6 run tests/performance/contact-form.js",
		"test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
		"test:ci": "npm run test:unit:coverage && npm run test:integration && npm run test:e2e",
		"mailpit:start": "docker run -d --name mailpit -p 8025:8025 -p 1025:1025 axllent/mailpit",
		"mailpit:stop": "docker stop mailpit && docker rm mailpit",
		"mailpit:restart": "npm run mailpit:stop; npm run mailpit:start",
		"email:test": "tsx scripts/test-email.ts"
	},
	"devDependencies": {
		"@iconify/svelte": "^5.0.0",
		"@playwright/test": "^1.53.1",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.22.2",
		"@sveltejs/vite-plugin-svelte": "5.1.0",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.10",
		"@types/crypto-js": "^4.2.2",
		"@types/eslint": "^9.6.1",
		"@types/k6": "^1.0.2",
		"@types/node": "^24.0.4",
		"@types/nodemailer": "^6.4.14",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"@vitest/coverage-v8": "^1.0.0",
		"@vitest/ui": "^1.0.0",
		"crypto-js": "^4.2.0",
		"daisyui": "^5.0.43",
		"eslint": "^9.29.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^2.30.0",
		"globals": "^16.2.0",
		"html2pdf.js": "^0.10.3",
		"jsdom": "^23.0.0",
		"jspdf": "^3.0.1",
		"marked": "^15.0.12",
		"mdsvex": "^0.12.6",
		"prettier": "^3.6.1",
		"prettier-plugin-svelte": "^2.10.1",
		"puppeteer": "^24.10.2",
		"svelte": "5.34.8",
		"svelte-check": "^4.2.2",
		"tailwindcss": "^4.1.10",
		"tslib": "^2.8.1",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"typescript-eslint": "8.35.0",
		"vite": "^7.0.0",
		"vite-imagetools": "^7.1.0",
		"vite-plugin-kit-routes": "^1.0.2",
		"vitest": "^3.2.4"
	},
	"type": "module",
	"dependencies": {
		"@dotenv-run/cli": "^1.3.6",
		"@inlang/paraglide-js": "^2.1.0",
		"@sveltejs/adapter-vercel": "^5.7.2",
		"nodemailer": "^6.9.7",
		"shiki": "^3.7.0",
		"zod": "^3.22.4"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}
